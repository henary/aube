<div class="modal-header item-model">
	<h2 class="modal-title icon_VS" id="myModalLabel">添加修改VS消息</h2>
	<span>基础信息</span>
</div>
<div class="modal-body" id="modalbody">
	<form id="timelineForm" method="post" class="form-horizontal" action="">
	<input type="hidden" name="tlid" id="tlid" value="$!tlid">
	#parse("admin/video/timeline/timeline_common.vm")
	<span>扩展信息</span>
	<hr>
	<div class="form-group">
		<label class="col-sm-4 control-label" for="$entry.value">选项</label>
		<div class="col-sm-5">
			<input type="text" class="form-control" name="vsOption" value="$!info.get($entry.key)" placeholder="$!entry.value" />
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-4 control-label" for="$entry.value">选项</label>
		<div class="col-sm-5">
			<input type="text" class="form-control" name="vsOption" value="$!info.get($entry.key)" placeholder="$!entry.value" />
		</div>
	</div>
	<div class="modal-footer ">
		<div class="col-sm-9 col-sm-offset-4 alert-dismissible">
			<button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
			<button type="submit" class="btn btn-success">确定</button>
		</div>
	</div>
</form>
</div>
<script type="text/javascript">
$.validator.setDefaults({
	submitHandler: function (form) {
		var params = $(form).serialize();
		$.post('${houtaiPath}admin/video/saveVideo.xhtml',params,function(result){
			eval(result);
			if(data.success) {
				location.reload();
			} else {
				alert(data.errmsg);
				return false;
			}
		});
	}
});
$(document).ready(function () {
	$("#timelineForm").validate({
		rules: {
			tlTitle: "required",
			tlDesc: "required",
			startMin: {
				required:true,
				maxlength:3,
				max:$!duration
			},
			startSec: {
				required:true,
				maxlength:2,
				max:59
			},
			endMin: {
				required:true,
				maxlength:3,
				max:$!duration
			},
			endSec: {
				required:true,
				maxlength:2,
				max:59
			}
		},
		messages: {
			tlTitle: "标题不能为空",
			tlDesc: "注释不能为空",
			startMin: {
				required:"开始分不能为空",
				max:"开始分不能大于视频时长",
				maxlength:"开始分不能超出3位"
			},
			startSec: {
				required:"开始秒不能为空",
				max:"开始秒不能大于59",
				maxlength:"开始秒不能超出2位数"
			},
			endMin: {
				required:"结束分不能为空",
				max:"结束分不能大于视频时长",
				maxlength:"结束分不能超出3位数"
			},
			endSec: {
				required:"结束秒不能为空",
				max:"结束秒不能大于59",
				maxlength:"结束秒不能超出2位数"
			}
		},
		errorElement: "em",
		errorPlacement: function ( error, element ) {
			error.addClass( "help-block" );
			element.parents( ".col-sm-5" ).addClass( "has-feedback" );
			element.parents( ".col-sm-3" ).addClass( "has-feedback" );

			if ( element.prop( "type" ) === "checkbox" ) {
				error.insertAfter( element.parent( "label" ) );
			} else {
				error.insertAfter( element );
			}
			if ( !element.next( "span" )[ 0 ] ) {
				$( "<span class='glyphicon glyphicon-remove form-control-feedback'></span>" ).insertAfter( element );
			}
		},
		success: function ( label, element ) {
			if ( !$( element ).next( "span" )[ 0 ] ) {
				$( "<span class='glyphicon glyphicon-ok form-control-feedback'></span>" ).insertAfter( $( element ) );
			}
		},
		highlight: function ( element, errorClass, validClass ) {
			$( element ).parents( ".col-sm-5" ).addClass( "has-error" ).removeClass( "has-success" );
			$( element ).parents( ".col-sm-3" ).addClass( "has-error" ).removeClass( "has-success" );
			$( element ).next( "span" ).addClass( "glyphicon-remove" ).removeClass( "glyphicon-ok" );
		},
		unhighlight: function ( element, errorClass, validClass ) {
			$( element ).parents( ".col-sm-5" ).addClass( "has-success" ).removeClass( "has-error" );
			$( element ).parents( ".col-sm-3" ).addClass( "has-success" ).removeClass( "has-error" );
			$( element ).next( "span" ).addClass( "glyphicon-ok" ).removeClass( "glyphicon-remove" );
		}
	});
});
</script>